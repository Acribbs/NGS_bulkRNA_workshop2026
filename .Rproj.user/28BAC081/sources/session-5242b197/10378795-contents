total_counts <- colSums(count_matrix)

qc_df <- data.frame(
  Sample = names(total_counts),
  TotalCounts = total_counts,
  Group = metadata$Group[match(names(total_counts), metadata$Sample)],
  CellType = metadata$CellType[match(names(total_counts), metadata$Sample)],
